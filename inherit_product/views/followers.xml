<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ts_tree_view_custom_group_for_followers" model="ir.ui.view">
            <field name="name">ts.tree.view.custom.group.for.followers</field>
            <field name="model">followers.group.project</field>
            <field name="arch" type="xml">
                <tree  >
                            <field name="follower_group_name"/>
                                                <field name="following_user_ids"/>

                            <field name="active_follower_group"/>

                </tree>
            </field>
        </record>
        <record id="ts_form_view_custom_group_for_followers" model="ir.ui.view">
            <field name="name">ts.form.view.custom.group.for.followers</field>
            <field name="model">followers.group.project</field>
            <field name="arch" type="xml">
                <form >
                   <sheet>
                       <group string="Followers Group">
                        <group>
                            <field name="follower_group_name"/>

                            <field name="following_user_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="active_follower_group"/>
                        </group>

                    </group>
                   </sheet>

                </form>


            </field>
        </record>
        <record id="ts_followers_group_action" model="ir.actions.act_window">
            <field name="name">Follower's Group</field>
            <field name="res_model">followers.group.project</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Follower's Group" action="ts_followers_group_action"
                  id="menu_followers_group_project" parent="project.menu_project_config" active="True"/>
    </data>
</odoo>