                          </group>
                    <group string="Non-Disclosure and Confidentiality Agreement">  
                             <field name="ndis_conf_attachment_ids" widget="many2many_binary" nolabel="1"/>
                          </group>
                    </group>
                    <group>
                    <group string="Staff Filming and Photography Consent Form">  
                             <field name="staf_f_attachment_ids" widget="many2many_binary" nolabel="1"/>
                          </group>
                    <group string="Terms and Condition in case of Separation">  
