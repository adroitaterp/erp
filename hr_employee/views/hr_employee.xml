            </xpath>

            
             <xpath expr="//field[@name='lang']" position="before">
                  <field name="religion"/>
             </xpath>
            <xpath expr="//group[@name='has_work_permit']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

            <xpath expr="//field[@name='address_home_id']" position="attributes">
                <attribute name="string">Permanent Address</attribute>
            </xpath>


            

             <xpath expr="//field[@name='private_email']" position="attributes">
                <attribute name="string">Personal Email</attribute>
            </xpath>

              <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="string">Personal Contact No</attribute>
                 
              </xpath>


             <xpath expr="//field[@name='religion']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
             <xpath expr="//field[@name='lang']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

             <xpath expr ="//page[@name='personal_information']/group/group[1]/div[@name='div_km_home_work']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

             <xpath expr ="//page[@name='personal_information']/group/group[1]/label" position="attributes">
