<odoo>
  <data>
        <record id="hr_employee_inherit_view_form" model="ir.ui.view">
        <field name="name">hr.employee.inherit.form.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml"> 
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="legal_information" string="Legal Information">
                    <group>
                        <group>
                            <field name="date_of_joining"/>
                            <field name="end_date_of_probationary"/>
                            <field name="date_of_regularization"/>
                            <field name="end_date"/>
                            <field name="visa_company_name"/>
                            <field name="visa_title"/>
                            <field name="Online_Offer_letter"/>
                            <field name="visa_no" string="E-visa No"/>
                            <field name="expire_visa" string="E-visa Expiry"/>
                            <field name="visa_change_status_no"/>
                            <field name="labour_contract_no"/>
                            <field name="labour_card_no"/>
                            <field name="labour_card_expiry"/>                    
                        </group>
                        <group>
                            
                            <field name="passport"/>
                            <field name="passport_number"/>
                            <field name="passport_expiration_date"/>        
                            <field name="employment_visa_no"/>
                            <field name="employment_visa_start_date"/>
                            <field name="employment_visa_end_date"/>
                            <field name="emirates_id_no"/>
                            <field name="emirates_id_expiration"/>
                            <field name="insurance_new_no"/>
                            <field name="new_status"/>
                            <field name="validate_date_from"/>
                            <field name="validate_date_to"/>
                        </group>
                        
                    </group>

                </page>

                <page string="Attachments">
              <group>
                <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
              </group>
            </page>
            </xpath>

            
             <xpath expr="//field[@name='lang']" position="before">
                  <field name="religion"/>
                   <field name="personal_whatsapp_no"/>
             </xpath>
            <xpath expr="//group[@name='has_work_permit']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

            <xpath expr="//field[@name='address_home_id']" position="attributes">
                <attribute name="string">Permanent Address</attribute>
            </xpath>


             <xpath expr="//field[@name='address_home_id']" position="before">
                 <field name="present_address"/>
            </xpath>

             <xpath expr="//field[@name='private_email']" position="attributes">
                <attribute name="string">Personal Email</attribute>
            </xpath>

              <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="string">Personal Contact No</attribute>
                 
              </xpath>


             <xpath expr="//field[@name='religion']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
             <xpath expr="//field[@name='lang']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

             <xpath expr ="//page[@name='personal_information']/group/group[1]/div[@name='div_km_home_work']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

             <xpath expr ="//page[@name='personal_information']/group/group[1]/label" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

             <xpath expr ="//page[@name='personal_information']/group/group[3]" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>
             <xpath expr ="//page[@name='personal_information']/group/group[4]" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

             <!-- <xpath expr="//page[@name='personal_information']/field[@name='emergancy_contact']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>
 -->

