                    <field name="emergency_address"/>
                    
               

            </xpath>

              <xpath expr="//field[@name='emergency_phone']" position="after">
                    <field name="relationship"/> 
               

            </xpath>


             <xpath expr="//page[@name='personal_information']/group/group[6]" position="after">
                 <group string="Employee Accountabilities Laptop">
                     <field name="device_name"/>
                     <field name="product"/>
                     <field name="windows"/>
                     <field name="accessories"/>
                     <field name="ms_office_id"/>
                     <field name="ms_office_password"/>
                     <field name="company_serial_no"/>
                     <field name="laptop_password"/>
                     <field name="laptop_history"/>
                     <field name="outlook_email_account"/>

                 </group>

             </xpath>

             <xpath expr ="//page[@name='personal_information']/group/group[2]/field[@name='identification_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>
            <xpath expr ="//page[@name='personal_information']/group/group[2]/field[@name='identification_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>
            

            <xpath expr ="//page[@name='personal_information']/group/group[1]/field[@name='address_home_id']" position="attributes">
