                <field name="personal_email"/>
                <field name="personal_whatsapp_no"/>
                <field name="bank_name"/>
                <field name="bank_account"/>
                <field name="bank_account_ibn"/>
               


            </xpath>

            <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
             </xpath>

            <xpath expr ="//page[@name='personal_information']/group/group[2]/field[@name='passport_id']" position="attributes">
