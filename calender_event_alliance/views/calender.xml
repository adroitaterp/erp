<odoo>
    <data>

        <!-- calender form view -->
           <record id="calendar_event_form_inherited" model="ir.ui.view">
                <field name="name">calendar event Form Inherited</field>
                <field name="model">calendar.event</field>
                <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
                <field name="arch" type="xml">
                           <xpath expr="//button[@name='action_open_composer']" position="attributes">     
                            <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='alarm_ids']" position="after">
                        <field name="location_id"/>
                    </xpath>
    
                    <xpath expr="//field[@name='location']" position="attributes">
                    	<attribute name="invisible">1</attribute>
                    </xpath>

                    <xpath expr="//field[@name='description']" position="after">
                        
                                <field name="sent_email" string="Are you sending email invitation?"/>
                                <div name="send_buttons" class="sm-2">
                                    <button name="action_open_composer" help="Send Email to attendees" type="object"
                                        string="Email invitation" icon="fa-envelope"/>
                                </div>
                                <field name="is_done" invisible="True"/>
                       
                    </xpath>
                
                </field>
          </record>
 
            <!-- calender tree view -->
         <record id="calendar_event_list_inherited" model="ir.ui.view">
                <field name="name">calendar event Lis Inherited</field>
                <field name="model">calendar.event</field>
                <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='partner_ids']" position="after">
                        <field name="location_id"/>
                    </xpath>
    
                    <xpath expr="//field[@name='location']" position="attributes">
                    	<attribute name="invisible">1</attribute>
                    </xpath>
       
                </field>
          </record>

        <record id="calendar.action_calendar_event" model="ir.actions.act_window">
            <field name="context">{'create':True}</field>
        </record>

        <record id="calendar_event_calender_inherited" model="ir.ui.view">
                <field name="name">calendar event  view Inherited</field>
                <field name="model">calendar.event</field>
                <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='partner_ids']" position="after">
                        <field name="location_id"/>
                    </xpath>
    
       
                </field>
          </record>
    </data>
</odoo>