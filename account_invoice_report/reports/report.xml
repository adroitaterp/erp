<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="account_invoice_report_template">
           <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <style type="text/css">
                        @font-face {
                        font-family: "Calibri (Body)";
                        src: url(data:font/ttf;base64,<t t-esc="font"/>) format("woff");
                        font-weight: normal;
                        font-style: normal;
                        }
                    </style>

                    <div class="page">
                        <t t-call="account_invoice_report.custom_header"/>
                            <div class="oe_structure">

                                <head>
                                    <style>
                                        table   {
                                                width: 100%; 
                                                }
                                        th {
                                                font-size: 16px;
                                                line-height: 30px;
                                                padding-left: 5px;

                                            }
                                        td {
                                                    padding-top: 0px;
                                                    padding-bottom: 0px;
                                                    padding-left: 5px;
                                            }

                                    </style>
                                </head>

                               <table>
            
                                    <br/>
                                    <tr width="100%">
                                        <td style="text-align:center;" width="100%" >
                                      <h2 >
                                      Tax Invoice
                                      </h2>
                                        </td>
                                              
                                    </tr>
                              </table>

                             <div class="row">
                                    <div style="font-size:12px" class="col-8" >

                                    </div>
                                    
                                    <div style="font-size:12px" class="col-4" >
                                    <table style="border: 1px solid black;" width="400">
                                     <tbody>
                                         <tr style="font-weight: bold;">
                                             <td  style="border: 1px solid black;">TRN:</td>
                                             <td  style="border: 1px solid black;"><span t-field="doc.ref"/></td>
                                         </tr>
                                         <tr>
                                             <td  style="border: 1px solid black;">Tax Date:</td>
                                             <td  style="border: 1px solid black;"><span t-field="doc.invoice_date"/></td>
                                         </tr>
                                          <tr>
                                             <td  style="border: 1px solid black;">Invoice No:</td>
                                             <td  style="border: 1px solid black;"><span t-field="doc.name"/></td>
                                         </tr>
                                         <tr>
                                             <td  style="border: 1px solid black;">Referencef#</td>
                                             <td  style="border: 1px solid black;"><span t-field= "doc.ref"/></td>
                                         </tr>
                                        
                                     </tbody>
                                     </table>
                                     <br/>
                                
                                    </div>
                             </div>

                               <div class="row">
                                    <div style="font-size:12px" class="col-8" >
                                    <table  width="400">
                                     <tbody>
                                         <tr style="font-weight: bold;">
                                             <td>Billed By:</td>   
                                         </tr>

                                         <tr>          
                                             <td>
                                                  Alliance Prime Accounting and Tax Counsultancy <br/>
                                                  office No, 8-2, Wxchange Tower, Business Bay <br/>
                                                  Dubai, United Arab Emirates
                                             </td>
                                         </tr>
                                        
                                        
                                     </tbody>
                                     </table>
                                    </div>
                                    
                                    <div style="font-size:12px" class="col-4" >
                                    <table  width="400">
                                     <tbody>
                                         <tr style="font-weight: bold;">
                                             <td  >Billed To:</td>
                                            
                                         </tr>
                                         <tr>
                                      
                                             <td  >
                                                    <t t-if="doc.partner_id.street">
                                                        <span t-field="doc.partner_id.street"/> 
                                                  <br/>
                                                  </t>
                                                    <t t-if="doc.partner_id.street2">
                                                      <span t-field="doc.partner_id.street2"/> <br/>
                                                    </t>
                                                    <t t-if="doc.partner_id.city">
                                                      <span t-field="doc.partner_id.city"/> 
                                                    </t>
                                                    <t t-if="doc.partner_id.state_id.name">
                                                        <span t-field="doc.partner_id.state_id.name"/>
                                                    </t>
                                                    <t t-if="doc.partner_id.zip">
                                                      <span t-field="doc.partner_id.zip"/>
                                                  
                                                    <br/>
                                                    </t>
                                             
                                             </td>
                                         </tr>
                                        
                                        
                                     </tbody>
                                     </table>
                                
                                    </div>
                             </div>

                              <div class="row">
                                    <div style="font-size:12px" class="col-12" >
                                     <t t-if="doc.invoice_line_ids">
                                <h4 style="font-size: 24px;">Invoice Lines</h4>
                                    <table  style="border: 1px solid black;"  >
                                        <tbody >
                                            <tr  style="border-bottom: 1px solid black;">
                                                <th >S.No</th>
                                                <th >Product</th>
                                                <th >Quantity</th>
                                                <th >Price</th>
                                                <th >Disc (%)</th>
                                                <th >Taxes</th>
                                                <th >Subtotal</th>
                                            </tr>

                                            <t t-set="serial" t-value="1"/>
                                            <t t-foreach="doc.invoice_line_ids" t-as="i">
                                                
                                                <tr style="border-bottom: 1px solid black;">
                                                    
                                                    <td width="7%" style="text-align:left;padding-left:15px;">
                                                        <span t-esc="serial"/>
                                                        <t t-set="serial" t-value="serial+1" />
                                                    </td>

                                                    <td width="38%">
                                                    
                                                            <span t-esc="i.product_id.name"/>

                                                    </td>

                                                    <td width="10%" style="text-align:right;padding-right:10px;">
            
                                                            <!-- <span t-esc="i.invoice_date.strftime('%m-%d-%Y')"/> -->
                                                            <span t-esc="i.quantity" />
                                                    </td>

                                                    <td width="10%" style="text-align:right;padding-right:10px;">
                        
                                                            <span t-esc="i.price_unit" />
                                                    </td>

                                                    <td width="10%" style="text-align:right;padding-right:10px;">
                                                        <span t-esc="i.discount" />
                                                        
                                                    </td>

                                                    <td width="15%" >
                                                        <span t-esc="i.tax_ids.name" />
                                                        
                                                        
                                                        
                                                    </td>

                                                    <td width="10%" style="text-align:right;padding-right:10px;">
                                                       
                                                        <span t-field="i.price_subtotal" t-options='{"widget": "monetary", "currency_field": "currency_id"}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </t>
                                 


                                    </div>
                              </div>
                              <div class="row">
                                    <div style="font-size:12px" class="col-4" >
                                    <table >
                                     <tbody>
                                            <tr>
                                                  <td style="font-weight: bold;">
                                                          Bank Details: 
                                                  </td>
                                            </tr>
                                            <tr>
                                                    <td>
                                                          Alliance Prime Accounting and Tax Consultancy <br/>
                                                          Account No.: 3708440345501 <br/>
                                                          IBAN: AE48 0340 0037 0844 0345 501 <br/>
                                                          BIC: MEBLEADXXX <br/>
                                                          Bank: Emirates Islamic (EI) Dubai Souq Branch Dubai, U.A.E.
                                                    </td>
                                                    
                                            </tr>
                                             </tbody>
                                  </table >
                                    
                             </div>
                               <div style="font-size:12px" class="col-4" >
                                    <table >
                                        <tbody>
                                            <tr style="font-weight: bold;">
                                                    <td style="text-align:left;" width="10%" >
                                                        <img t-att-src="'/account_invoice_report/static/description/QR CODE FOR INVOICE.png'" height="10%"/>
                                                    </td>
                                            </tr>
                                            
                                        </tbody>
                                     </table>
                                    <br/>
                                
                              </div>     
                             </div>     
                                     
                                    </div>
                                </div>

                          
                    </t>
                </t>
            </t>
        </template>

        <report id="account_invoice_report_template_id" 
        model="account.move" 
        string="Invoice (header/footer)" 
        report_type="qweb-pdf" 
        name="account_invoice_report.account_invoice_report_template" 
        file="account_invoice_report.account_invoice_report_template" 
        />
        
    </data>
</odoo>