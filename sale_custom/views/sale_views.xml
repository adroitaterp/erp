<odoo>

    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//header//button[@name='action_confirm']" position="after">
      
                <button name="button_proposal_approve"
                        type="object"
                        states="to_proposal_approve"
                        string="Management Approve"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_proposal"
                />
                <button name="button_proposal_approve_reject"
                        type="object"
                        states="to_proposal_approve"
                        string="Management Reject"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_proposal"
                />
                <button name="button_customer_approve"
                        type="object"
                        states="waiting_for_customer_approval"
                        string="Customer Approve"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_proposal"
                />
                <button name="button_customer_rejected"
                        type="object"
                        states="waiting_for_customer_approval"
                        string="Customer Reject"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_proposal"
                />
            </xpath>
            <xpath expr="//header//button[@name='action_confirm']" position="after">
                <button name="button_contract_approve"
                        type="object"
                        states="to_contract_approve"
                        string="Management Approve"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_contract"
                />
                
<!--                <button name="button_customer_approve"-->
<!--                        type="object"-->
<!--                        states="customer_approval"-->
<!--                        string="Approved by customer"-->
<!--                        class="oe_highlight"-->
<!--                        groups="sale_custom.group_approve_contract"-->
<!--                />-->
<!--                <button name="button_customer_reject"-->
<!--                        type="object"-->
<!--                        states="customer_approval"-->
<!--                        string="Reject by customer"-->
<!--                        class="oe_highlight"-->
<!--                        groups="sale_custom.group_approve_contract"-->


                
                <button name="button_contract_approve_reject"
                        type="object"
                        states="to_contract_approve"
                        string="Management Reject"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_contract"
                />
                <button name="button_customer_contract_approve"
                        type="object"
                        states="waiting_customer_contract_approval"
                        string="Customer Contract Approve"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_contract"
                />
                <button name="button_customer_contract_reject"
                        type="object"
                        states="waiting_customer_contract_approval"
                        string="Customer Contract Reject"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_contract"
                />


                <button name="button_contract_expired"
                        type="object"
                        states="sale"
                        string="Contract expired"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_contract"
                       
                />

                 <button name="button_one_time_job_done"
                        type="object"
                        states="sale"
                        string="One Time Job Done"
                        class="oe_highlight"
                        groups="sale_custom.group_approve_contract"
                       
                />

               
            </xpath>
       
            <xpath expr="//page[@name='order_lines']" position="after">
                <page name="misc_info" string="Miscellaneous">
                    <group>
                        <group>
                            
                            <field name="term" invisible="1"/>
                            <field name="percentage" invisible="1"/>
                            <field name="services" invisible="1"/>
                            <field name="scope_of_work"/>
                            <field name="term_of_contract" invisible="1"/>
                            <field name="license_no" invisible="1"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="auth_sign_id"/>
                            <field name="termination_days"/>
                            <field name="payment_details"/>
                            <field name="contact_id" domain="[('id', 'in', contact_ids)]"/>
                            <field name="contact_ids" invisible="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="before">
                <field name="term"/>
            </xpath>
            <xpath expr="//field[@name='validity_date']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'sale')]}</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'sale')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'sale')]}</attribute>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,customer_approval,sale"/>
            </xpath>
            <xpath expr="//sheet/notebook/page[@name='customer_signature']" position="after">
                <page string="Scope of Work" name="product_description">
                    <field name="sale_description_lines">
                        <tree editable="bottom">
                            <field name="order_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="start_date"/>
                <field name="until_completion"/>
                <field name="end_date" attrs="{'invisible': [('until_completion', '=', True)]}"/>
                <field name="days_int" invisible="True"/>
                <field name="contract_expired" invisible="True"/>
                <field name="days" decoration-danger="days_int &lt; 30" /> 
                <field name="payment_terms_note"/>
                
            </xpath>

            <field name="partner_id" position="after">
                <field name="estimation_id" invisible="True"/>
            </field> 
            
             <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="string">CEO</attribute>
            </xpath>
            
             <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            
            <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                  <attribute name="invisible">1</attribute>
            </xpath>

            
<!--            <xpath expr="//field[@name='sale_order_template_id']" position="after">-->
<!--&lt;!&ndash;                <label for="payment_terms_note" string="Payment Terms Note"/>&ndash;&gt;-->
<!--                <field name="payment_terms_note"/>-->
<!--            </xpath>-->

        </field>
    </record>


    <record id="view_sale_order_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                
                 <xpath expr="//field[@name='amount_total']" position="after">
                     <field name="start_date"/>
                     <field name="end_date"/>
                     <field name="days_int" invisible="True"/>
                         <field name="days" 
                              decoration-danger="days_int &lt; 30" optional="hide"/>
         
                     
                 </xpath>

            
    
            </field>
     </record>


      <record id="view_sale_order_expire_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.expire.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='date_order']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='name']" position="after">
                    <field name="create_date"/>
                </xpath>

                 <!-- <xpath expr="//field[@name='amount_total']" position="after">
                     <field name="start_date"/>
                     <field name="end_date"/>
                      <field name="days" decoration-danger="days &lt; '30'" />
                     <field name="services"/>
                     <field name="term"/> 
                     
                 </xpath>
 -->

                 <xpath expr="//field[@name='invoice_status']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>

                 <!-- <xpath expr="//field[@name='term']" position="after">
                     <field name="state"/>
                </xpath> -->

            
    
            </field>
     </record>

    <!-- expriration menu -->
     <record id="expire_date_action" model="ir.actions.act_window">
              <field name="name">Renewable Contracts</field>
              <field name="type">ir.actions.act_window</field>
              <field name="res_model">sale.order</field>
              <field name="view_id" ref="sale.view_quotation_tree_with_onboarding"/>
             <field name="domain">[ '|', ('days_int', '&lt;=', 30), ('days', '=', 'Contract Expired'),('state', '=', 'sale'), ]</field>
              <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
              <field name="help" type="html">
                     <p class="oe_view_nocontent_create">Sale order details here... </p>
              </field>
    </record>

   
    <menuitem id="expire_data_id" 
        name="Renewable Contracts" 
        action="expire_date_action" 
        parent="sale.menu_sale_report" 
        sequence="2"/>



    


</odoo>