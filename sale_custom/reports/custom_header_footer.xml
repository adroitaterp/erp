<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_header">
        <div class="header " >
            <table>
                <tr width="100%">
                    <img t-att-src="'/sale_custom/static/description/header_small.PNG'" width="100%"/>
                </tr>
                <br/>
                <tr width="100%">
                    <td width="80%" style="text-align:center;">
                        <h5 style="text-decoration:overline underline;">
                            <strong>
                                Alliance Prime Accounting and Tax Consultancy (APATC)
                            </strong>
                        </h5>
                    </td>
                    <td style="text-align:left;" width="20%" >
                        <img t-att-src="'/sale_custom/static/description/logo.png'" height="70%"/>
                    </td>
                </tr>
            </table>
        </div>
    </template>

    <template id="custom_footer">
        <div class="footer" style="margin:0;padding:0;" width="100%" height="100%">
            <div style="background-color:darkblue; text-align:right;color:white;">
                <table class="text-right">
                    <tr style="text-align:right">
                        <strong style="font-size:23px;">Alliance Adroit Accounting and Bookkeeping</strong>
                        <br/>
                    </tr>
                    <tr style="text-align:right">
                        <strong style="font-size:17px;">
                            <i class="fa fa-link">
                                <span t-field="res_company.website"/>
                            </i>
                            <i class="fa fa-envelope">
                                <span t-field="res_company.email"/>
                            </i>
                            <i class="fa fa-phone icon-large">
                                <span t-field="res_company.phone"/>
                            </i>
                        </strong>


                        <br/>
                    </tr>
                    <tr class="text-right">
                        <strong style="font-size:17px;">
                            <span t-field="res_company.street"/>
                        </strong>
                    </tr>
                    <br/>
                    <br/>
                    <br/>
                </table>
            </div>
        </div>
    </template>
</odoo>